<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="17dp"
            android:paddingLeft="33dp"
            android:paddingRight="33dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Small Text"
                android:textSize="19sp"
                android:id="@+id/text_storename"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Small Text"
                android:textSize="13sp"
                android:id="@+id/text_desingername"
                android:layout_marginTop="5dp"
                />

            <RelativeLayout
                android:id="@+id/postDetailNameLineLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/image_user"
                        android:src="@drawable/icon_person"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center_vertical"/>

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이름"
                        android:textSize="16sp"
                        android:layout_marginLeft="14dp"
                        android:id="@+id/text_username"
                        android:layout_gravity="center_vertical"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Small Text"
                        android:id="@+id/text_date"
                        android:layout_gravity="center_vertical"
                        />

                    <Button
                        android:layout_width="20dp"
                        android:layout_height="39dp"
                        android:background="@drawable/nm_007a_icon_more"
                        android:id="@+id/btn_option"
                        android:layout_gravity="center_vertical"

                        />
                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/text_post"
                android:layout_marginTop="23dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Small Text"
                android:id="@+id/text_tags"
                android:layout_marginTop="18dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:id="@+id/imageView"
                android:layout_below="@+id/text_tags"
                android:layout_marginTop="18dp"
                android:scaleType="centerCrop"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="33dp"
            android:paddingRight="33dp"
            android:layout_marginBottom="19dp"
            android:layout_marginTop="11dp">

            <LinearLayout
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/btn_like"
                    android:background="@drawable/review_detail_like_button"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="7dp"
                    android:clickable="true"
                    android:button="@null"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00+"
                    android:textSize="13sp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/text_likecount"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/nm_007a_icon_coment"
                    android:id="@+id/btn_comment"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="7dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00+"
                    android:textSize="13sp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/text_commentcount"/>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>






</RelativeLayout>