<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@drawable/nm008_shoplist_bg">


    <ImageView
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:id="@+id/image_store"
        android:background="#b0b2b7"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/shoplist_item_center_field"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_toRightOf="@+id/image_store">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Large Text"
            android:textSize="16sp"
            android:textColor="#3f4857"
            android:id="@+id/text_store_name"
            android:layout_marginBottom="8dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textSize="12sp"
            android:textColor="#3f4857"
            android:id="@+id/text_store_description"/>
    </LinearLayout>

    <RatingBar
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:layout_gravity="bottom"
        android:layout_alignBottom="@+id/shoplist_item_center_field"
        android:layout_alignRight="@+id/image_store"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:paddingBottom="12dp"
        android:paddingTop="12dp">

        <Button
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:text=""
            android:id="@+id/buttonLike"
            android:background="@drawable/review_detail_like_button"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="M"
            android:id="@+id/text_distance"
            android:layout_alignParentBottom="true"/>


    </RelativeLayout>

</RelativeLayout >